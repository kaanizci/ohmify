{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run C program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "main.c",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "run C program",
            "type": "shell",
            "command": "./main",
            "dependsOn": "build and run C program",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}